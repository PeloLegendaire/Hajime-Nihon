{% extends 'quiz/base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
    <div class="container-quiz">
        <h1>Ajouter un quiz</h1>
        {{ form_start(form, {'attr': {'class': 'form-quiz'}}) }}
            <div class="block-input-quiz">
                {{ form_row(form.libelle) }}
                {{ form_row(form.type) }}
                {{ form_row(form.nombreQuestion) }}
            </div>
            {{ form_row(form.valider) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
